{
  "name": "TAP-api",
  "version": "1.0.0",
  "description": "TAP Api part",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "lint": "better-npm-run lint",
    "lint:fix": "better-npm-run lint:fix",
    "prod": "better-npm-run prod",
    "prod:build": "better-npm-run prod:build",
    "prod:job": "better-npm-run prod:job",
    "prod:serve": "better-npm-run prod:serve",
    "start": "better-npm-run dev:start:server"
  },
  "babel": {
    "plugins": [
      [
        "module-resolver",
        {
          "alias": {
            "utils": "./server/utils",
            "models": "./server/models"
          }
        }
      ]
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current",
            "uglify": true
          }
        }
      ]
    ]
  },
  "dependencies": {
    "app-module-path": "^2.2.0",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "circular-json": "^0.5.4",
    "dotenv": "^5.0.1",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.0",
    "koa-error": "^3.2.0",
    "koa-helmet": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-virtual-host": "^0.2.0",
    "koa2-cors": "^2.0.5",
    "lodash": "^4.17.10",
    "moment": "^2.22.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/node": "^7.0.0-beta.46",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-preset-env": "^1.6.1",
    "better-npm-run": "^0.1.0",
    "eslint": "^4.19.1",
    "eslint-plugin-babel": "^5.1.0",
    "nodemon": "^1.17.4"
  },
  "engines": {
    "node": ">=8.x.x",
    "npm": ">=3.x.x"
  },
  "betterScripts": {
    "prod:job": {
      "command": "pm2 start ./dist/index.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "prod:serve": {
      "command": "node ./dist/index.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "prod": "npm run prod:build && npm run prod:serve",
    "dev:start:server": {
      "command": "nodemon server --exec babel-node --plugins=dynamic-import-node",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "prod:build": {
      "command": "babel ./server -d ./dist --copy-files",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "lint": {
      "command": "$(npm bin)/eslint --ext .js,.jsx .;exit 0",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "lint:fix": {
      "command": "$(npm bin)/eslint --fix --ext .js,.jsx .;exit 0",
      "env": {
        "NODE_ENV": "test"
      }
    }
  }
}
